{
    "manifest_version": 3,
    "name": "Tatoeba Lookup",
    "version": "1.0.18",
    "description": "Fetches definitions from Tatoeba Dictionary",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "scripts" : ["background.js"]
    },
    "host_permissions": [
        "https://tatoeba.org/",
        "https://tatoeba.elnu.com/"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+T",
                "mac": "Command+Alt+T"
            }
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{f9090a57-ca98-4d61-8402-f2bc3221214c}"
        }
    }
}
